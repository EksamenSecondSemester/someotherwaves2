<style>
  * {
    margin: 0;
    padding: 0;
  }
  .hidden {
    display: none;
  }
  img {
    width: 125px;
    display: block;
    border-radius: 15px;
    object-fit: cover;
    height: 200px;
    opacity: 1;
    transition-duration: .5s;
  }
  img:hover {
    opacity: .7;
  }

  /* ----- Desktop ----- */
  @media screen and (min-width: 800px) {
